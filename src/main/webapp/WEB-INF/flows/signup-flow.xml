<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">

    <view-state id="step1" view="/signup/signup1.html">
        <transition on="nextStep" to="step2"></transition>
        <transition on="cancel" to="cancel"></transition>
    </view-state>

    <view-state id="step2" view="/signup/signup2.html">
        <transition on="nextStep" to="success"></transition>
        <transition on="cancel" to="cancel"></transition>
    </view-state>

    <end-state id="success" view="externalRedirect:my_account/home_page.html"></end-state>
    <end-state id="cancel" view="externalRedirect:my_account/home_page.html"></end-state>

</flow>